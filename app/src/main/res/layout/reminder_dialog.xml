<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color1"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/write"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_remind"
        android:hint="(less than 15 words)"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/button_VR_remind"
        android:layout_width="37dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_voicerec"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/SaveNow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_button_remind"
        android:text="Remind!"
        android:textColor="@color/darkblue"
        android:textSize="30sp" />
</LinearLayout>